<div id="content_left">
	<div id="content_left_inner">
		<h1><%= @topic.title %></h1>

		<%= form_for @topic do |f| %>
			<%= f.label :title %><br>
			<%= f.text_field :title %><br><br>
			<%= f.label :content %><br>
			<%= f.text_area :content %><br><br>
			<%= f.submit("Clear Form", { :class => "button", :type => "reset" }) %>
			<%= f.submit("Submit", { :class => "button", :type => "submit" }) %>
		<% end %>

		<%= link_to 'delete', topic_path, :method => 'delete' %>
	</div>
</div>


