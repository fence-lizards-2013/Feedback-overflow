<%= render 'errors' %>

<%= form_for @user do |f| %>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :email, "E-mail" %><br>
  <%= f.text_field :email %><br><br>

  <% if !@user.socrates_auth? %>
    <%= f.label :password, "Password" %><br>
    <%= f.password_field :password %><br><br>
    <%= f.label :password_confirmation, "Password Confirmation" %><br>
    <%= f.password_field :password_confirmation %><br><br>
  <% end %>
  
  <%= f.submit("Clear Form", { :class => 'button', :type => "reset" }) %>
  <%= f.submit("Submit", { :class => 'button', :type => "submit" }) %>
<% end %>
